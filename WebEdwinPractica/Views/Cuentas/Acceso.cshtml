@model LoginUsuarios

@{      
    ViewData["Title"] = "Acceso de usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="wrapper">

    <div class="content-wrapper d-flex justify-content-center align-items-center">
            <div class="row">
                <div class="card card-primary card-outline m-5">
                    <div class="card-header text-center">
                        Bienvenido - Inicio de Sesión
                    </div>
                    <div class="card-body">
                        <form asp-controller="Cuentas" asp-action="Acceso" method="post">
                            <div class="input-group mb-3">
                                <input asp-for="Email" class="form-control" placeholder="Correo" />
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="bi bi-envelope"></span>
                                    </div>
                                </div>
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>

                            <div class="input-group mb-3">
                                <input asp-for="Password" class="form-control" placeholder="Contraseña" />
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="bi bi-shield-lock"></span>
                                    </div>
                                </div>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <div class="mb-3 text-center d-flex justify-content-center align-items-center">
                                <div class="custom-check">
                                    <label asp-for="Rememberme">
                                        <input asp-for="Rememberme" />
                                        @Html.DisplayNameFor(m => m.Rememberme)
                                    </label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12 d-flex justify-content-center align-items-center flex-column">
                                    <button type="submit" class="btn btn-success rounded mb-3">Ingresar  <i class="bi bi-arrow-right-circle-fill"></i></button>
                                    <small><a asp-action="Registro">Registrarme como un nuevo usuario</a></small>
                                    <small><a asp-action="OlvidoPassword">¿Olvidaste tu contraseña?</a></small>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
    </div>
</div>


@section Scripts{ 
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@*Importamos la siguiente libreria*@
@using Microsoft.AspNetCore.Identity

@*Inyectamos el siguiente codigo*@
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserInManager

<ul class="navbar-nav ml-auto">

    @*Verificamos si el usuario está autenticado*@

    @if(SignInManager.IsSignedIn(User))
    {
        //Muestra la bienvenida al usuario
        <li class="nav-item">
            <a class="nav-link" href="">Hola, @UserInManager.GetUserName(User)</a>
        </li>
        //Muestra el boton salir
        <li class="nav-item">
            <form id="LogoutForm" method="post" class="form-inline" asp-controller="Cuentas" asp-action="SalirAplicacion">
                <button type="submit" class="btn nav-link">Salir</button>
            </form>
        </li>      
     }
     else
     {
        //El usuario no está autenticado
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Cuentas" asp-action="Registro">Registrarse</a>
        </li>
        <li class="nav-item">
            <a class="nav-link " asp-area="" asp-controller="Cuentas" asp-action="Acceso">Acceder</a>
        </li>
     }

</ul>